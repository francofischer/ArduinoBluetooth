<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.santiago.menu.leerdigital">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="LED Digitales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:id="@+id/textView13"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/lediconoff"
            android:id="@+id/img_led1"
            android:layout_marginTop="26dp"
            android:layout_below="@+id/textView13"
            android:layout_alignLeft="@+id/img_led2"
            android:layout_alignStart="@+id/img_led2" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/lediconoff"
            android:id="@+id/img_led3"
            android:layout_below="@+id/img_led2"
            android:layout_alignLeft="@+id/img_led2"
            android:layout_alignStart="@+id/img_led2"
            android:layout_marginTop="15dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/lediconoff"
            android:id="@+id/img_led2"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/img_led1"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@mipmap/lediconoff"
            android:id="@+id/img_led4"
            android:layout_marginTop="18dp"
            android:layout_below="@+id/img_led3"
            android:layout_alignLeft="@+id/img_led3"
            android:layout_alignStart="@+id/img_led3" />


    </RelativeLayout>
</FrameLayout>
